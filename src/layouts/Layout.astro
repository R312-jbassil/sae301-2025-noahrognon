---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const {
	title = 'TaVue',
	showHeader = true,
	showFooter = true,
	bodyClass = '',
	mainClass = ''
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logos.svg" sizes="512x512" />
		<link rel="icon" type="image/png" href="/logos-512.png" sizes="512x512" />
		<link rel="apple-touch-icon" href="/logos-512.png" sizes="512x512" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={`bg-tavue-anthracite font-inter text-tavue-off-white antialiased ${bodyClass}`}>
		{showHeader && <Header />}
		<main class={mainClass}>
			<slot />
		</main>
		{showFooter && <Footer />}
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
