---
import heroImageUrl from '../assets/hero.png';

const features = [
	'Fabrication francaise sur mesure',
	'Livraison rapide',
	'Design epure',
	'Materiaux nobles'
];

const carouselWords = [
	'Artisanat',
	'Raffine',
	'Francais',
	'Sur mesure',
	'Elegant',
	'Intemporel',
	'Durable',
	'Creatif'
];

const proofAvatars = ['#F8E7C7', '#F0D2A4', '#E2BA84', '#CAA068'];
---

<section class="relative isolate overflow-hidden border-b border-[#2a2a2a] bg-[#0C1014] text-[#F5EFE6]">
	<div
		class="absolute inset-0 -z-20 bg-cover bg-center opacity-75"
		style={`background-image: url(${heroImageUrl.src});`}
		role="presentation"
	></div>
	<div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_28%_20%,rgba(32,40,48,0.35)_0%,rgba(12,16,20,0.7)_55%,#0C1014_90%)]"></div>
	<div class="absolute inset-0 -z-10 bg-[linear-gradient(180deg,rgba(12,16,20,0.02)_0%,rgba(12,16,20,0.62)_55%,#0C1014_88%)]"></div>

	<div class="mx-auto flex min-h-[100vh] max-w-6xl flex-col items-center justify-center px-6 pb-32 pt-32 text-center md:pb-36 md:pt-36">
		<div class="mb-6 inline-flex items-center gap-2 rounded-full border border-[#B79358]/40 bg-[#D9BA85]/90 px-6 py-2 text-xs font-semibold uppercase tracking-[0.35em] text-[#3C3020] shadow-[0_18px_40px_rgba(217,186,133,0.35)] md:text-sm">
			<svg viewBox="0 0 20 20" aria-hidden="true" class="h-4 w-4 fill-current">
				<path d="M10 1.667a8.333 8.333 0 1 1 0 16.666 8.333 8.333 0 0 1 0-16.666Zm.833 4.166a.833.833 0 0 0-1.666 0v4.167c0 .46.373.833.833.833h3.334a.833.833 0 0 0 0-1.667H10.833V5.833Z" />
			</svg>
			<span>Offre limitee · Gravure offerte jusqu'au 30/11</span>
		</div>

		<p class="mb-5 text-sm font-semibold uppercase tracking-[0.45em] text-[#6F8093] sm:text-base">Sur mesure</p>

		<h1 class="mb-6 text-4xl font-semibold leading-tight text-[#F7F2E9] md:text-[4.4rem]">
			<span class="block font-playfair text-[3rem] leading-[1.1] md:text-[4.4rem]">Creez votre regard,</span>
			<span class="mt-2 block font-playfair text-[#DABF90] text-[3rem] leading-[1.1] md:text-[4.4rem]">a votre image.</span>
		</h1>

		<p class="max-w-2xl text-base text-[#7F8B96] md:text-lg">
			Des lunettes sur mesure, faconnées en France avec soin et precision pour sublimer votre style unique.
		</p>

		<ul class="mt-12 flex flex-wrap items-center justify-center gap-4 text-sm text-[#E6DFD4]">
			{features.map((feature) => (
				<li>
					<span class="inline-flex items-center gap-2 rounded-full border border-[#DABF90]/60 bg-[#12161A]/80 px-5 py-2 shadow-[0_8px_24px_rgba(11,13,15,0.45)] backdrop-blur">
						<svg viewBox="0 0 20 20" aria-hidden="true" class="h-4 w-4 text-[#DABF90]">
							<path
								fill="currentColor"
								d="M16.7 6a1 1 0 0 0-1.4-1.4L8 11.92 4.7 8.7a1 1 0 1 0-1.4 1.42l4 4a1 1 0 0 0 1.4 0l8-8Z"
							/>
						</svg>
						{feature}
					</span>
				</li>
			))}
		</ul>

		<a
			href="/configurateur"
			class="group mt-12 inline-flex items-center gap-3 rounded-full border border-[#F5EFE6]/80 bg-[#F5EFE6] px-10 py-3 text-base font-semibold text-[#1E2228] shadow-[0_16px_45px_rgba(0,0,0,0.35)] transition duration-200 ease-elegant hover:-translate-y-0.5 hover:shadow-[0_24px_55px_rgba(0,0,0,0.45)] md:text-lg"
		>
			Personnaliser ma paire
			<span class="text-xl transition-transform duration-200 ease-elegant group-hover:translate-x-1">&#8594;</span>
		</a>

		<div class="mt-12 inline-flex items-center gap-4 text-sm text-[#C5B9A5]">
			<div class="flex -space-x-2">
				{proofAvatars.map((color, index) => (
					<span
						style={`background:${color}`}
						class="flex h-7 w-7 items-center justify-center rounded-full border border-[#1B1F24] text-xs font-semibold text-[#1E2228] shadow-[0_6px_18px_rgba(0,0,0,0.35)]"
						aria-hidden="true"
					>
						{index + 1}
					</span>
				))}
			</div>
			<span>
				<strong class="font-semibold text-[#DABF90]">412 personnes</strong> ont cree leur paire ce mois-ci
			</span>
		</div>

		<div class="mt-20 w-full overflow-hidden">
			<div class="relative mx-auto max-w-5xl overflow-hidden rounded-full border border-[#2E3138] bg-[#10161c]/80 py-4 shadow-[0_16px_40px_rgba(0,0,0,0.35)]">
				<div class="hero-marquee">
					<div class="hero-marquee-track flex items-center gap-10 whitespace-nowrap text-xs font-semibold uppercase tracking-[0.5em] text-[#778494] md:text-sm">
						{[...carouselWords, ...carouselWords].map((word, index) => (
							<span class="flex items-center gap-4" aria-hidden={index >= carouselWords.length ? 'true' : undefined}>
								<span class="block h-1 w-1 rounded-full bg-[#DABF90]/80"></span>
								{word}
							</span>
						))}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes hero-marquee {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}

	.hero-marquee {
		overflow: hidden;
		width: 100%;
	}

	.hero-marquee-track {
		width: max-content;
		animation: hero-marquee 22s linear infinite;
	}
</style>
